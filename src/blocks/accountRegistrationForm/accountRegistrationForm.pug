include ../button/button
include ../input/input
include ../inputRadio/inputRadio

.registration-form
    form
        h2.registration__title_h2 Регистрация аккаунта
        .registration__group
            +input("text", "form-control", "name", "Имя")
            +input("text", "form-control", "surname", "Фамилия")
            .radio
                +inputRadio("radio-input", "radio", "male", "radio_1", "radio-label", "Мужчина")
            .radio
                +inputRadio("radio-input", "radio", "male", "radio_2", "radio-label", "Женщина")
        .registration__group
            h3.registration__title_h3 Дата рождения
            input(type="date" class="form-control" id="date" placeholder="ДД.ММ.ГГГГ")
        .registration__group
            h3.registration__title_h3 Данные для входа в сервис
            +input("text", "form-control", "email", "Email")
            +input("text", "form-control", "password", "Пароль")
            .custom-switch
                +inputRadio("switch-input", "checkbox", "special", "customSwitch", "switch-label", "Получать спецпредложения")     
        +button('button_form', "#", 'перейти к оплате', 'arrow_forward' )        
