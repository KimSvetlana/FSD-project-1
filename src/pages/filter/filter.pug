extends ../../blocks/layout/main
include ../../blocks/checkbox/checkbox
include ../../blocks/cardsRoom/cardsRoom
//- include ../utils/mixins


block variables
	- var title = 'Вторая страница';
	- var description = 'Описание сайта';
	- var pageClass = 'filter-page';

block content
	.container.filter-page__content  
		.content__filter-menu
			.menu-group__datepicker
				h3.menu-group__title_h3.datepicker даты пребывания в отеле
				input(type="text" class="filter__datepicker сheck-in" id="dateFrom" placeholder="ДД.ММ.ГГГГ")
			.menu-group__guests
				h3.menu-group__title_h3.guests гости
				include ../../blocks/dropdown/dropdown
				//- +dropdown("dropdown-guests", "Сколько гостей", "Взрослые", "Дети", "Младенцы")
			.menu-group__cost
				include ../../blocks/sliderRange/sliderRange
			.menu-group__checkbox-group_1
				h3.menu-group__title_h3 Checkbox Buttons
				+checkbox("checkbox-1", "checkbox-1", "Можно курить", "")
				+checkbox("checkbox-2", "checkbox-2", "Можно с питомцами", "", "checked")
				+checkbox("checkbox-3", "checkbox-3", "Можно пригласить гостей (до 10 человек)", "", "checked")
			.menu-group__checkbox-group_2
				h3.menu-group__title_h3 Доступность
				.checkbox-group__checkbox-1
					+checkbox("checkbox-4", "checkbox-4", "Широкий коридор", " Ширина коридоров в номере не менее 91 см.")
				.checkbox-group__checkbox-2
					+checkbox("checkbox-5", "checkbox-5", "Помощник для инвалидов", "На 1 этаже вас встретит специалист и проводит до номера.")
			.menu-group__comfort
				h3.menu-group__title_h3.comfort удобства номера
				include ../../blocks/dropdownComfort/dropdownComfort
				//- +dropdown("-comfort", "Удобства номера", "спальни", "кровати", "ванные комнаты")
			.menu-group__checkbox-list(id = "container-list")
				ul.expandable-checkbox-list
					li
						h3.menu-group__title_h3 дополнительные удобства
						ul.sub-menu
							<li>
								+checkbox("checkbox-6", "checkbox-6", "Завтрак")
							<li>
								+checkbox("checkbox-7", "checkbox-7", "Письменный стол")
							<li>
								+checkbox("checkbox-8", "checkbox-8", "Стул для кормления")
							<li>
								+checkbox("checkbox-9", "checkbox-9", "Кроватка")
							<li>
								+checkbox("checkbox-10", "checkbox-10", "Телевизор")
							<li>
								+checkbox("checkbox-11", "checkbox-11", "Шампунь")
							<li>
								+checkbox("checkbox-12", "checkbox-12", "Телевизор")
							<li>
								+checkbox("checkbox-13", "checkbox-13", "Шампунь")
						</ul>
					</li>
					li 
				i.material-icons.checkbox-list__icon(id = "checkbox-icon") expand_more
					
